#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro neofetch <args ...>"
  echo ""

  neofetch --help
}

version() {
  neofetch --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    neofetch "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
